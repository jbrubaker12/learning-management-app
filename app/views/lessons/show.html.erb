<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= (@lesson.video.present?) ? (video_tag @lesson.video, autoplay: false, controls: true, class: "rounded") : "No video available" %>

    <div class="my-2 border p-4 rounded">
    	<h1 class="text-2xl font-sembild"><%= @lesson.title %></h1>
    	<p class="text-gray-700"><%= @lesson.description %></p>
    </div>

    <div class="my-4 lg:mb-0">
    	<%= link_to "Mark as complete", course_lesson_path(@course, @lesson), data: { 'turbo-method' => :put }, class: "bg-green-500 rounded hover:bg-green-500 text-white-50 px-4 py-2" %>
    </div>
  </div>
</div>
